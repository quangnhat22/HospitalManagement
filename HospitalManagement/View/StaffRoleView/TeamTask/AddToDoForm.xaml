<Window x:Class="HospitalManagement.View.StaffRoleView.TeamTask.AddToDoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagement.View.StaffRoleView.TeamTask"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:utils="clr-namespace:HospitalManagement.Utils"
        xmlns:dd="urn:gong-wpf-dragdrop"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="AddToDoForm" 
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <GroupBox
                    Header="Subject"
                    Width="430"
                    HorizontalAlignment="Left"
                    Height="80">
                    <TextBox
                        x:Name="txbSubject"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="280"
                        Text="{Binding SubjectText}"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        SpellCheck.IsEnabled="True"
                        materialDesign:HintAssist.Hint="Subject" 
                        Margin="0,0,0,-4" 
                        Width="417"
                        />
                </GroupBox>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <DatePicker
                            Width="140"
                            SelectedDate="{Binding StartDate}"
                            materialDesign:HintAssist.Hint="Start Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <DatePicker
                            Width="140"
                            SelectedDate="{Binding EndDate}"
                            materialDesign:HintAssist.Hint="End Date"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <GroupBox
                    HorizontalAlignment="Left"
                    Header="Địa điểm"
                    Margin="0,-10,0,-37.2"
                    Width="430"
                    Height="100">
                        <TextBox
                        x:Name="txbLocation"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="280"
                        Text="{Binding LocationText}"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        SpellCheck.IsEnabled="True"
                        materialDesign:HintAssist.Hint="Vui lòng chia sẻ chi tiết nhất có thể..." Margin="0,0,0,-4" Width="417"
                        />
                    </GroupBox>
                </Grid>
                <Grid Grid.Row="1">
                    <GroupBox
                    HorizontalAlignment="Left"
                    Header="Chi tiết"
                    Margin="0,40,0,-20.4"
                    Width="430"
                    Height="190">
                        <TextBox
                        x:Name="txbBody"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="280"
                        Text="{Binding InfoText}"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        SpellCheck.IsEnabled="True"
                        materialDesign:HintAssist.Hint="Vui lòng chia sẻ chi tiết nhất có thể..." Margin="0,0,0,-4" Width="417"
                        />
                    </GroupBox>
                </Grid>
                
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Button
                            Command="{Binding AddTaskCommand}"
                            x:Name="btnLogin"
                            Width="120"
                            Height="45"
                            Background="#35a0fe"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="#35a0fe"
                            ToolTip="Đăng nhập"
                            Content="Xác nhận">
            </Button>
        </Grid>
    </Grid>
</Window>
