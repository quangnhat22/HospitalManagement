<Window x:Class="HospitalManagement.View.StaffRoleView.TeamTask.AddToDoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagement.View.StaffRoleView.TeamTask"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:utils="clr-namespace:HospitalManagement.Utils"
        xmlns:dd="urn:gong-wpf-dragdrop"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="AddToDoForm" 
        Height="710"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Content="Phân chia công việc"
                    FontSize="28"
                    FontWeight="DemiBold"
                    ></Label>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <TextBox
                        x:Name="txbSubject"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="280"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding SubjectText}"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Hidden"
                        SpellCheck.IsEnabled="True"
                        materialDesign:HintAssist.Hint="Tiêu đề" 
                        Margin="10" 
                        Width="415"
                        Height="50"
                        />
                    <StackPanel Orientation="Horizontal">
                        <DatePicker
                            x:Name="dpStart"
                            HorizontalAlignment="Left"
                            Margin="10"
                            Width="225"
                            SelectedDate="{Binding StartDate}"
                            materialDesign:HintAssist.Hint="Ngày bắt đầu"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                        <materialDesign:TimePicker
                            x:Name="tpStart"
                            Width="180" 
                            materialDesign:HintAssist.Hint="Thời gian bắt đầu"
                            Style="{StaticResource MaterialDesignOutlinedTimePicker}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <DatePicker
                            x:Name="dpEnd"
                            HorizontalAlignment="Left"
                            Margin="10"
                            Width="225"
                            SelectedDate="{Binding StartDate}"
                            materialDesign:HintAssist.Hint="Ngày bắt đầu"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                        <materialDesign:TimePicker
                            x:Name="tpEnd"
                            Width="180" 
                            materialDesign:HintAssist.Hint="Thời gian bắt đầu"
                            Style="{StaticResource MaterialDesignOutlinedTimePicker}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Vertical">
                    <TextBox
                        x:Name="txbLocation"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="280"
                        Height="55"
                        Margin="10"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding LocationText}"
                        AcceptsReturn="true"
                        VerticalScrollBarVisibility="Hidden"
                        SpellCheck.IsEnabled="true"
                        materialDesign:HintAssist.Hint="Địa điểm (Ex: phòng 1 tòa A)" 
                        Width="415"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        />
                    <TextBox
                        x:Name="txbBody"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        MinWidth="280"
                        Text="{Binding InfoText}"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        SpellCheck.IsEnabled="True"
                        materialDesign:HintAssist.Hint="Nội dung" 
                        Margin="10" 
                        Width="415"
                        Height="200"
                        VerticalAlignment="Top"
                        />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3">
                <Button
                        Command="{Binding AddTaskCommand}"
                        x:Name="btnLogin"
                        Width="120"
                        Height="45"
                        Background="#35a0fe"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="#35a0fe"
                        ToolTip="Đăng nhập"
                        Content="Xác nhận"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
