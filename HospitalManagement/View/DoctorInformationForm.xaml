                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Email:" Foreground="#35a0fe" FontSize="18" HorizontalAlignment="Right">
                </TextBlock>
                <TextBlock Text="Địa chỉ Email" Foreground="Black" FontSize="18" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Column="1">
                </TextBlock>
            </Grid>
            <Grid Width="300" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="44,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Địa chỉ liên lạc:" Foreground="#35a0fe" FontSize="18" HorizontalAlignment="Right">
                </TextBlock>
                <Viewbox Grid.Column="1" Margin="5,0,0,0">
                    <StackPanel Orientation="Vertical" Width="150">
                        <TextBlock
                            FontSize="18" 
                            TextWrapping="Wrap" 
                            Foreground="Black"
                            Text="thành phố Kon Tum tỉnh Kon Tum phường alo alo alo lao lao" />
                    </StackPanel>
                </Viewbox>
            </Grid>-->
        </StackPanel>
        <Grid Height="80" VerticalAlignment="Bottom">
            <Button Height="60" Width="150" Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="10" ToolTip="MaterialDesignRaisedButton with Round Corners" Content="Xác nhận" FontSize="20" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
