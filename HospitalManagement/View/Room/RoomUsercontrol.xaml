<UserControl x:Class="HospitalManagement.View.Room.RoomUsercontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagement.View.Room"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="White"
             x:Name="roomUC"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="760" d:DesignWidth="1387">
    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="1087*"/>
            <ColumnDefinition Width="294*"/>
        </Grid.ColumnDefinitions>-->
        <Grid.Background>
            <ImageBrush ImageSource="Background.jpg" Stretch="Uniform"/>
        </Grid.Background>
        <StackPanel Background="#7FFFFFFF"
                    Margin="540,0,470,205"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical">
            <StackPanel>
                <Grid Height="10" 
                      Background="#FFE0EBFD"/>
                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="MaterialDesignOutlinedButton"
                        Content="TẦNG 3"
                        x:Name="Floor3"
                        Command="{Binding OpenRoomWindow}"
                        CommandParameter="{Binding ElementName=Floor3}"
                        Height="60"
                        Background="White" BorderBrush="#FFE0EBFD" Foreground="#FF80A8E5"/>
            </StackPanel>
            <StackPanel>
                <Grid Height="10" 
                      Background="#FFE0EBFD"/>
                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="MaterialDesignOutlinedButton"
                        x:Name="Floor2"
                        Command="{Binding OpenRoomWindow}"
                        CommandParameter="{Binding ElementName=Floor2}"
                        Content="TẦNG 2"
                        Height="60"
                        Background="White" BorderBrush="#FFE0EBFD" Foreground="#FF80A8E5"
                        />
            </StackPanel>
            <StackPanel>
                <Grid Height="10" 
                      Background="#FFE0EBFD"/>
                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                        ToolTip="MaterialDesignOutlinedButton"
                        x:Name="Floor1"
                        Content="TẦNG 1"
                        Height="60"
                        Background="White" BorderBrush="#FFE0EBFD" Foreground="#FF80A8E5" 
                        Command="{Binding OpenRoomWindow}"
                        CommandParameter="{Binding ElementName=Floor1}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
