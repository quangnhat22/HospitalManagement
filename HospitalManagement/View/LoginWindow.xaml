<Window x:Class="HospitalManagement.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagement.View"
        mc:Ignorable="d"
        x:Name="loginWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Intern"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="LoginWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#35a0fe" Offset="1"/>
                <GradientStop Color="#c2e2ff" Offset="0"/>
            </LinearGradientBrush>

        </Grid.Background>
        <Border Height="390" VerticalAlignment="Top" CornerRadius="0 0 115 0" Background="#fff"/>

        <StackPanel Orientation="Horizontal">
            <StackPanel Width="350" >
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/loginForm.png" Width="300" Height="300" VerticalAlignment="Top" Margin="0 55 0 0" Stretch="Fill" ></Image>
                </Grid>
            </StackPanel>
            <StackPanel Margin="50 0 0 0">
                <StackPanel  Margin="20 20 0 0">

                    <TextBlock 
                        Text="Đăng nhập" 
                        Margin="10 0 10 20" 
                        TextAlignment="Center"
                        FontSize="38"
                        FontWeight="Bold"
                        Foreground="#35a0fe"></TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="User" Width="25" Height="25" Margin="0 5 0 0"/>
                        <TextBox
                            x:Name="txtUser"
                            Margin="10 0"
                            Width="250"
                            materialDesign:HintAssist.Hint="Tên đăng nhập"
                            BorderBrush="#35a0fe"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Lock" Width="25" Height="25" Margin="0 5 0 0"/>
                        <TextBox
                            x:Name="txtPassword"
                            Margin="10 0"
                            Width="250"
                            materialDesign:HintAssist.Hint="Mật khấu"
                            BorderBrush="#35a0fe"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button 
                            x:Name="btnForgetPassword" 
                            Content="Quên mật khẩu?" 
                            HorizontalAlignment="Left" 
                            Height="24"
                            Width="120" 
                            VerticalAlignment="Top" 
                            Padding="0" 
                            HorizontalContentAlignment="Right" 
                            VerticalContentAlignment="Center" 
                            FontSize="13" 
                            Margin="165,0,0,0" 
                            FontWeight="Medium" 
                            FontStyle="Italic"
                            Foreground="#ff7f4d"
                            Cursor="Hand" 
                            FocusVisualStyle="{x:Null}"
                            Background="{x:Null}" 
                            BorderBrush="{x:Null}" 
                            IsTabStop="False">
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <Button
                            Command="{Binding OpenMainWindow}"
                            CommandParameter="{Binding ElementName= loginWindow}"
                            x:Name="btnLogin"
                            Width="120"
                            Height="45"
                            Background="#35a0fe"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="#35a0fe"
                            ToolTip="Đăng nhập"
                            Content="Đăng nhập">
                        </Button>
                    </StackPanel>
                    <StackPanel Margin="10" HorizontalAlignment="Center">
                        <Button 
                            Command="{Binding OpenSignUpForm}"
                            CommandParameter="{Binding ElementName= loginWindow}"
                            x:Name="btnSignUp" 
                            FocusVisualStyle="{x:Null}"
                            Content="Đăng ký" 
                            ToolTip="Chưa có tài khoản? Hãy đăng ký"
                            HorizontalAlignment="Center" 
                            Height="24" 
                            Width="120" 
                            VerticalAlignment="Top" 
                            Padding="0" 
                            HorizontalContentAlignment="Center" 
                            VerticalContentAlignment="Center" 
                            FontSize="14" 
                            Foreground="#ff7f4d" 
                            FontWeight="Medium" 
                            Cursor="Hand"
                            Background="{x:Null}" 
                            BorderBrush="{x:Null}" 
                            IsTabStop="False"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
